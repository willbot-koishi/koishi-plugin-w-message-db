{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "lib",
    "target": "es2022",
    "module": "esnext",
    "declaration": true,
    "emitDeclarationOnly": true,
    "composite": true,
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "jsxImportSource": "@satorijs/element",
    "strictFunctionTypes": true,
    "types": [
      "node",
      "yml-register/types"
    ]
  },
  "include": [
    "src",
    "shared",
    "locales",
  ]
}
